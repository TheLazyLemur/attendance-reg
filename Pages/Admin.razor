@page "/Admin"


<div class="flex space-x-5 mt-5">
    <button class="@(_pageStatus == PageStatus.Employee ? "bg-blue-500" : "bg-gray-500") p-2 pl-5 pr-5 text-gray-100 text-lg rounded-lg border-4 border-white focus:border-blue-300" @onclick="@(() => { _pageStatus = PageStatus.Employee; StateHasChanged();})">Employees</button>
    <button class="@(_pageStatus == PageStatus.Meeting ? "bg-blue-500" : "bg-gray-500") p-2 pl-5 pr-5 text-gray-100 text-lg rounded-lg border-4 border-white focus:border-blue-300" @onclick="@(() => { _pageStatus = PageStatus.Meeting; StateHasChanged();})">Meeting</button>
    <button class="@(_pageStatus == PageStatus.Status ? "bg-blue-500" : "bg-gray-500") p-2 pl-5 pr-5 text-gray-100 text-lg rounded-lg border-4 border-white focus:border-blue-300" @onclick="@(() => { _pageStatus = PageStatus.Status; StateHasChanged();})">Status</button>
</div>

<div class="h-full overflow-auto">
    @if (_pageStatus == PageStatus.Employee)
    {
        <EmployeeAdmin/>
    }
    @if (_pageStatus == PageStatus.Status)
    {
        <RoleAdmin/>
    }
    @if (_pageStatus == PageStatus.Meeting)
    {
        <MeetingAdmin/>
    }
</div>