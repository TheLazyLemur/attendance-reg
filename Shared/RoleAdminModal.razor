<EditForm Model="@Status" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <h1 class="text-2xl font-semibold">Add Status</h1>

    <div class="flex flex-col space-y-5 my-5">
        <div class="flex space-x-5">
            <label for="name">Status</label>
            <InputText class="border rounded-md" id="name" @bind-Value="Status.Name"/>
        </div>
    </div>

    <button class="p-2 pl-5 pr-5 bg-blue-500 text-gray-100 text-lg rounded-lg border-white border-4 hover:border-blue-300 focus:border-blue-300" type="submit">Submit</button>
</EditForm>