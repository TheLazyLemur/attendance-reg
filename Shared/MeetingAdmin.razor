<section class="mt-10">
    <table class="min-w-full divide-y divide-gray-200 w-full">
        @if (_meetings is not null)
        {
            @if (_meetings.Count > 0)
            {
                <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Speaker</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Topic</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var meeting in _meetings)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">@meeting.Name </td>
                        <td class="px-6 py-4 whitespace-nowrap">@meeting.Speaker </td>
                        <td class="px-6 py-4 whitespace-nowrap">@meeting.Topic </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <button class="text-gray-400 hover:text-red-500 rounded" @onclick="@(async () => { await MeetingEnvoy?.DeleteMeeting(meeting.Id!.Value)!; })">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                            </button>
                        </td>
                    </tr>
                }
                </tbody>
            }
            else
            {
                <div>Nothing found</div>
            }
        }
        else
        {
            <div>Loading...</div>
        }

    </table>

    <div class="flex mt-3">
        <button @onclick="@(ShowAddMeeting)" class="bg-blue-500 px-3 py-2 rounded-md text-white">Add</button>
    </div>

</section>