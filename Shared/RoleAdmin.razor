<section class="mt-10">
    <h2 class="">Status</h2>
    <table>
        @if (_statuses is not null)
        {
            @if (_statuses.Count > 0)
            {
                <tr class="text-left">
                    <th>Name</th>
                </tr>
                @foreach (var employee in _statuses)
                {
                    <tr>
                        <td>@employee.Name </td>
                    </tr>
                }
            }
            else
            {
                <div>Nothing Found</div>
            }
        }
        else
        {
            <div>Loading...</div>                
            }
    </table>
    
    <div class="flex mt-3">
        <button @onclick="@(() => { _displayModal = true; })" class="bg-blue-500 px-3 py-2 rounded-md text-white">Add</button>
    </div>
    
    <!-- The Modal -->
    <div id="myModal" class="modal @(!_displayModal ? "hidden" : "block")">
    
      <!-- Modal content -->
      <div class="modal-content">
          <button @onclick="@(() => { _displayModal = false; })" class="close"><span class="close">&times;</span></button>
          <EditForm Model="@_status" OnValidSubmit="@HandleValidSubmit">
              <DataAnnotationsValidator />
              <ValidationSummary />

              <div class="flex flex-col space-y-5 py-2">
                  <div class="flex space-x-5">
                    <label for="name">Status</label>
                    <InputText class="border rounded-md" id="name" @bind-Value="_status.Name"/>
                  </div>
              </div>
          
              <button class="w-24 border border-blue-500 rounded-lg hover:bg-blue-500 hover:text-white" type="submit">Submit</button>
          </EditForm>
      </div>
    
    </div>
    
</section>
