<section class="mt-10">
    <h2 class="">Status</h2>
    <table>
        @if (_statuses is not null)
        {
            @if (_statuses.Count > 0)
            {
                <tr class="text-left">
                    <th>Name</th>
                </tr>
                @foreach (var status in _statuses)
                {
                    <tr>
                        <td> @status.Name </td>
                        <td><button class="px-2 py-1 text-white bg-red-500 rounded" @onclick="@(() => StatusEnvoy.DeleteStatus(status.Name))">X</button></td>
                    </tr>
                }
            }
            else
            {
                <div>Nothing Found</div>
            }
        }
        else
        {
            <div>Loading...</div>                
            }
    </table>
    
    <div class="flex mt-3">
        <button @onclick="@(async () => { await ShowAddRole(); })" class="bg-blue-500 px-3 py-2 rounded-md text-white">Add</button>
    </div>
    
</section>
