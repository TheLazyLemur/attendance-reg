<section class="mt-10">
    <h2 class="">Status</h2>
    <table class="min-w-full divide-y divide-gray-200 w-full">
        @if (_statuses is not null)
        {
            @if (_statuses.Count > 0)
            {
                <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var status in _statuses)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap"> @status.Name </td>
                        <td class="px-6 py-4 whitespace-nowrap"><button class="px-2 py-1 text-white bg-red-500 rounded" @onclick="@(() => StatusEnvoy.DeleteStatus(status.Name))">X</button></td>
                    </tr>
                }
        </tbody>
            }
            else
            {
                <div>Nothing Found</div>
            }
        }
        else
        {
            <div>Loading...</div>                
            }
    </table>
    
    <div class="flex mt-3">
        <button @onclick="@(async () => { await ShowAddRole(); })" class="bg-blue-500 px-3 py-2 rounded-md text-white">Add</button>
    </div>
    
</section>
