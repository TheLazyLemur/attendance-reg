<EditForm Model="@_emailEntry" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="flex flex-col space-y-5 my-5">
        <div class="flex space-x-5">
            <label for="speaker">Email Address</label>
            <InputText class="border rounded-md" id="speaker" @bind-Value="_emailEntry.Email"/>
        </div>
    </div>
    <button class="w-24 border border-blue-500 rounded-lg hover:bg-blue-500 hover:text-white" type="submit">Submit</button>
</EditForm>