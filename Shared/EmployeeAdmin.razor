@using Microsoft.AspNetCore.Components
@using attendance_reg.Pages
@using attendance_reg.Pages.Envoys
<section class="mt-10">
    <table class="min-w-full divide-y divide-gray-200 w-full">
        @if (_employees is not null)
        {
            @if (_employees.Count > 0)
            {
                <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Surname</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var employee in _employees)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">@employee.Name</td>
                        <td class="px-6 py-4 whitespace-nowrap">@employee.Surname</td>
                        <td class="px-6 py-4 whitespace-nowrap"><button class="px-2 py-1 text-white bg-red-500 rounded" @onclick="@(async () => await EmployeeEnvoy.DeleteEmployee(employee.Id.Value))">X</button></td>
                    </tr>
                }
        </tbody>
            }
            else
            {
                <div>Nothing Found</div>
            }
        }
        else
        {
            <div>Loading...</div>
        }
    </table>
    
    <div class="flex mt-3">
        <button @onclick="@(async () => { await ShowAddEmployee(); })" class="bg-blue-500 px-3 py-2 rounded-md text-white">Add</button>
    </div>

</section>
