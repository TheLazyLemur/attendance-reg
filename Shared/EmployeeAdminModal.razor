@using Microsoft.AspNetCore.Components

<EditForm Model="@Employee" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <h1 class="text-2xl font-semibold">Add Employee</h1>
    <div class="flex flex-col space-y-5 my-5">
        <div class="flex space-x-5">
            <label for="name">Name</label>
            <InputText class="border rounded-md" id="name" @bind-Value="Employee.Name"/>
        </div>
        <div class="space-x-5">
            <label for="surname">Surname</label>
            <InputText class="border rounded-md" id="surname" @bind-Value="Employee.Surname"/>
        </div>
        <div class="flex space-x-5">
            <label for="title">Title</label>
            <InputText class="border rounded-md" id="title" @bind-Value="Employee.Title"/>
        </div>
        <button class="w-24 border border-blue-500 rounded-lg hover:bg-blue-500 hover:text-white" type="submit">Submit</button>
    </div>
</EditForm>